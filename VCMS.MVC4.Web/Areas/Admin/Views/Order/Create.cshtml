@using VCMS.MVC4.Data
@using VCMS.MVC4.Web
@model VCMS.MVC4.Data.Order
@{
    ViewBag.Title = "Thêm đơn hàng";
    ViewBag.Breadcrumb = new BreadcrumbModel { Items = new BreadcrumbItem[] { new BreadcrumbItem { Text = "Quản trị", Url = Url.Action("Index", "Home") }, new BreadcrumbItem { Url = Url.Action("Index", "Order"), Text = "Đơn hàng" }, new BreadcrumbItem { Url = null, Text = ViewBag.Title } } };
    
}
@Styles.Render("~/Content/themes/base/css")
<div class="form">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="clear-fix">
            <div id="tabs">
                <fieldset>
                    <legend class="title">Thông tin khách hàng</legend>
                    <div class="editor-label">
                        <label>Họ và tên</label>
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FullName)
                        @Html.ValidationMessageFor(model => model.FullName)
                    </div>
                    <div class="editor-label">
                        <label>CMND</label>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.CMND)
                            @Html.ValidationMessageFor(model => model.CMND)
                        </div>
                    </div>
                    <div class="editor-label">
                        <label>Địa chỉ</label>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Address)
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>
                    <div class="editor-label">
                        <label>Email</label>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="editor-label">
                        <label>Số điện thoại</label>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Phone)
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </div>
                    <div class="editor-label">
                        <label>Ghi chú</label>
                        @Html.TextAreaFor(model => model.Notes)
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="toolbar">
            <span class="button">
                <button type="submit" class="btn save"><i class="fa fa-save"></i> Lưu</button>
            </span>
            <span class="btn back">
                <a href="@Url.Action("Index", null, null)">
                    <i class="fa fa-mail-reply"></i> <span>Trở về</span>
                </a>
            </span>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script>

        function RemoveRougeChar(e) {
            if (e.substring(0, 1) == ",") {
                return e.substring(1, e.length)
            } return e
        }

    </script>
}


