@model VCMS.MVC4.Web.Areas.Admin.Models.LocalPasswordModel
@{
    
    ViewBag.Title = "Manage Account";
    
    ViewBag.Breadcrumb = new BreadcrumbModel()
    {
        Items = new List<BreadcrumbItem>() 
        {
            new BreadcrumbItem(){Url = Url.Action("Index","Home"), Text="Home", IsFirst=true},
            new BreadcrumbItem(){Url = null, Text="Thay đổi mật khẩu", IsLast=true},
        }
    };
}
<div class="form">
    <p class="message-success">@ViewBag.StatusMessage</p>
    @if (ViewBag.HasLocalPassword)
    {
        @Html.Partial("_ChangePasswordPartial")
    }
    else
    {
        @Html.Partial("_SetPasswordPartial")
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
