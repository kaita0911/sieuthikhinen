@using System.Data.Entity;
@model ICollection<VCMS.MVC4.Data.Discount>
@{
    var art = (Article)ViewBag.DiscountArticle;
}
<div class="list search-list-discount">
    <div class="header">
    </div>
    <div class="items">
        @foreach (var item in Model)
        {
            <div class="item">
                <label class="checkbox list-discount">
                    <input name="discounts" type="checkbox" value="@item.Id" class="check" @(art != null ? (art.Discounts.Contains(item) ? "checked" : "") : "") /><i></i>
                    <span class="name">
                        <span>@item.Name</span>
                    </span>
                </label>
            </div>
        }
    </div>
</div>
