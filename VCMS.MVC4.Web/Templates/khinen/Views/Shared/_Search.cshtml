@using (Html.BeginForm("search", "home", FormMethod.Get))
{
    <input type="text" name="keyword" class="txt-search" placeholder="@Html.Locale("search_enterkey")" value="@ViewBag.SearchKeyword" />
    <button type="submit" class="bt-search">
        @Html.Image(SiteConfig.Image("search.png"), new ImageOptions { Width = 21, Height = 21, Lazy = false }, new { alt = "search" })
    </button>
    @*<input name="pageSize" type="hidden" value="20" />
    <input name="pageIndex" type="hidden" value="1" />*@
}