@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <input type="search" name="keyword" class="txt-search" placeholder="Nhập từ khóa tìm kiếm..." value="@ViewBag.SearchKeyword" autocomplete="off">
    <button type="submit" class="bt-search"></button>
    <input name="pageSize" type="hidden" value="15" />
    <input name="pageIndex" type="hidden" value="1" />
}

