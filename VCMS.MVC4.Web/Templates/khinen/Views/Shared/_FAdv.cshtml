@model List<Article>
@using (DataContext db = new DataContext())
{
    if (Model.Count > 0)
    {
        <div id="adv-main-small" class="adv-main-small">
            <ul class="row">
                @foreach (var item in Model)
                {
                    var url = item["URL"];
                    <li class="col-lg-6 col-md-6">
                        <div class="item">
                            <figure>
                                <a href="@url" target="_blank" class="">
                                    @Html.Image(item.ImageUrl.ToLower(), new ImageOptions { Width = 570, Height = 270, Mode = ImageMode.crop, Lazy = false }, new { alt = item.ArticleName, @class = "owl" })
                                </a>
                            </figure>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
}



