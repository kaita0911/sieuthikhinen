        ViewBag.UserDisplayName = SiteConfig.CurrentUser.DisplayName;
        ViewBag.UserMail = SiteConfig.CurrentUser.Email;
    }
    else
    {
        lstcomment = Comment.ViewByArticle(Model.Id);
    }

    @Html.Partial("_CommentCreate")
    
