            <span class="sort" data-sort="@((int)CommentSortOrder.LIKE_NUMBER)">Hay nhất</span>
        </div>
    </div>
    
    <div class="col-xs-12">
        <div class="list-comment" id="list-comment">
            @Html.Partial("_CommentList", lstcomment)
        </div>
    </div>
}




