@model List<Article>
@{
    if (Model.Count > 0)
    {
        <div class="adv-duoi">
            <div class="container">  
                <ul class="row">
                    @foreach (var item in Model)
                    {

                        //var url = item["URL"];
                        <li class="col-lg-4 col-md-4">
                            <div class="item">
                                <figure>
                                    <a href="#" target="_blank">
                                        @Html.Image(item.ImageUrl.ToLower(), new ImageOptions { Width = 100, Height = 100, Mode = ImageMode.pad, Lazy = false }, new { alt = item.ArticleName, @class = "owl" })
                                    </a>
                                </figure>
                                <div class="meta">
                                    <h3>@item.ArticleName</h3>
                                    <div class="description">@Html.Raw(VNS.Web.Helpers.HTMLHelper.ReadBlock(item.ShortDescription, 25))</div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
}
