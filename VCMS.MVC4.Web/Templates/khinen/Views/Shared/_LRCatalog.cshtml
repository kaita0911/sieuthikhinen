@{
    var art = Article.GetByType(15, SiteConfig.LanguageId, ArticleFlags.ACTIVE, 1, 1, ArticleSortOrder.SORT_ORDER, VCMS.MVC4.Data.SortDirection.ASCENDING).List.FirstOrDefault();
}
<div class="box-sidebar-2 box-catalog hidden-sm hidden-xs">
    <h2 class="heading">@Html.Locale("download_catalog")</h2>
    <div class="content center">
        <a href="@(SiteConfig.LanguageId == 1?"/catalog.html":"/catalog-en.html")" title="@Html.Locale("download_catalog")">
            @if (art != null)
            {
                @Html.Image(art.ImageUrl, new ImageOptions { Width = 230, Height = 174 }, new { alt = Html.Locale("download_pricelist") })
            }
            else
            {
                @Html.Image(SiteConfig.Image("catalog.png"), new ImageOptions { Width = 230, Height = 174 }, new { alt = Html.Locale("download_pricelist") })
            }   
        </a>
    </div>
</div>
