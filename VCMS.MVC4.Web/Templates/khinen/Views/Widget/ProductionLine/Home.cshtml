                                            @Html.Image(item.ImageUrl, new ImageOptions { Width = 391, Height = 258, Mode = ImageMode.crop }, new { alt = item.ArticleName, @class = "owl" })
                                        </a>
                                    </figure>
                                    <div class="title">
                                        <a class="name" href="@Url.Action("Index", "ArticleType", new { code = item.ArticleType.UrlFriendly })" title="@item.ArticleName">
                                            @item.ArticleName
                                        </a>
                                        <a class="zoom lightbox" href="@Url.Content(item.ImageUrl)" data-plugin-options="{type:image;}">
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    *@
                </div>
            </div>
        </div>
    }
}
