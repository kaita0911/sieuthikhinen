@model ArticleResult
@if (Model.List.Count > 0)
{
    var type = Model.List.FirstOrDefault().ArticleType;
    <h2 class="title"><a href="#">@Html.Locale("other_article")</a></h2>
    <div class="other-info">
        <ul>
            @foreach (var item in Model.List)
            {
                <li>
                    <h4><a href="@Url.Action("Detail", "Article", new { id = item.Id, code = item.ArticleType.UrlFriendly, title = item.UrlFriendly })" title="@item.ArticleName">
                       <i class="fa fa-check"></i> @item.ArticleName</a></h4>
                    @if (type.ShowDateTime)
                    {
                        <span class="date"> - @item.Day</span>
                    }
                </li>
            }
        </ul>
    </div>
}
