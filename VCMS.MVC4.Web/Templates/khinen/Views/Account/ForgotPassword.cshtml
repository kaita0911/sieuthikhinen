@{
    ViewBag.Title = Html.Locale("account_forgot_password_2").ToHtmlString();
    ViewBag.Breadcrumb = new BreadcrumbModel { Items = new List<BreadcrumbItem> { new BreadcrumbItem { Text = Html.Locale("account_forgot_password_2").ToHtmlString(), Url = null, IsLast = true } } };
}

@*<h1 class="title">@Html.Locale("account_forgot_password_2")</h1>*@
<div class="row">
    <div class="col-md-8 col-sm-12 col-xs-12 col-md-offset-2 margin-bottom-20">
        @using (Ajax.BeginForm(new AjaxOptions { OnSuccess = "sent" }))
        {
            @Html.AntiForgeryToken()
            <fieldset class="account">
                <legend class="title">
                    @Html.Locale("Vui lòng nhập Email")
                </legend>
                <div class="form-group">
                    @*placeholder="@Html.Locale("account_enter_email")"*@
                    <input type="text" name="Email" class="form-control">
                </div>
                <button type="submit" id="forgot" class="margin-top-20 btn btn-continue btn-next">@Html.Locale("account_forgot_password_2") <i class="fa fa-angle-right"></i></button>
            </fieldset>
            @*<div class="form-group">
                    <label>Vui lòng nhập Email:</label>
                </div>*@

        }
        <p class="notice"></p>
    </div>
</div>
<script type="text/javascript">
    $("#forgot").on("click", function () {
        $(".notice").html("");
        $(this).button('loading');
    });
    function sent(data, status, xhr) {
        $("#forgot").button('reset');;
        $(".notice").html(data.Message);
    }
</script>
@Scripts.Render("~/Content/Plugin/jquery.unobtrusive-ajax.min.js")