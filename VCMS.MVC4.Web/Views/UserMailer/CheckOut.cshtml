@model CheckOutModel
@{
    Layout = null;
    var i = 1;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Đơn đặt hàng</title>
</head>
<body>
    <div>
        <table border="1" style="border:1px solid #ccc; border-collapse:collapse; width:49%">
            <thead>
                <tr>
                    <th colspan="2">Thông tin đơn hàng</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Mã đơn hàng</td>
                    <td>@Model.Order.OrderNumber</td>
                </tr>
                <tr>
                    <td>Ngày đặt hàng</td>
                    <td>@Model.Order.DateCreated</td>
                </tr>
                <tr>
                    <td>Số lượng</td>
                    <td>@Model.Order.TotalQty.ToString("#,##0")</td>
                </tr>
                <tr>
                    <td>Số tiền</td>
                    <td>@Model.Order.TotalAmount.ToString("#,##0")</td>
                </tr>
            </tbody>
        </table>

        <table border="1" style="border:1px solid #ccc; border-collapse:collapse; width:49%">
            <thead>
                <tr>
                    <th colspan="2">Thông tin người mua hàng</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Tên</td>
                    <td>@(Model.LastName + " " + Model.FirstName)</td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>Điện thoại</td>
                    <td>@Model.Phone</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        <table border="1" style="border:1px solid #ccc; border-collapse:collapse; width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order.OrderLines)
                {
                    <tr>
                        <td>@i++</td>
                        <td>@item.ProductName</td>
                        <td style="text-align:center"> @item.Qty</td>
                        <td style="text-align:right">@item.UnitPrice.ToString("#,##0")</td>
                        <td style="text-align: right">@item.Amount.ToString("#,##0")</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
